# Disguise as IE 9 on Windows 7
user-agent = "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)"
# If server says the file has been moved, follow the redirect
location
# When following a redirect, automatically set the previous URL as referer
referer = ";auto"
# Don't bother verifying SSL connections
insecure
# If server returns a failurecode, error out and display any retrieved content
fail-with-body
# Display data immediately as it arrives
no-buffer
# Don't display any transfer information
silent
# Display errors though
show-error
# Compression please
compressed
# Create subdirectories as needed
create-dirs
# Disable curl's fixup of the paths that it is given so that non-conforming requests are always passed to the server
path-as-is

# Display verbosely
#verbose
# Display progress bar instead of transfer information
#progress-bar
