// general options
quiet:yes
clean:no
bare:yes
wrap:132
tidy-mark:no
write-back:no

// hide stuff that tidy might write to stdout (should be using stderr, guy).
show-warnings:yes
show-errors:0
force-output:yes

// indentation
indent:yes
indent-attributes:yes
indent-cdata:yes

// xml sanity
output-xhtml:yes
add-xml-decl:no

// unnecessary warnings
assume-xml-procins:no
custom-tags:blocklevel

omit-optional-tags:no
warn-proprietary-attributes:no
strict-tags-attributes:no

// rules for cleaning up
replace-color:yes
fix-backslash:no
escape-cdata:yes

quote-marks:yes
quote-ampersand:yes
numeric-entities:no
preserve-entities:no

merge-emphasis:yes
merge-divs:yes
merge-spans:yes
drop-empty-elements:no
drop-empty-paras:no
