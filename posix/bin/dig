#!/bin/sh
posix=dig
windows=`resolvepath "$HOME/tools/bind-tools"`/dig.exe

## Figure out the right path to run
case "$platform" in
    msys|cygwin)
        prog=`[ -x "$windows" ] && echo "$windows"`
        ;;
esac

if [ -z "$prog" ]; then
    argv0=`readlink -f "$0"`
    IFS=:
    for p in $PATH; do
        rp=`readlink -f "$p/$posix"`
        [ -x "$rp" ] && [ `stat -f%i "$argv0" 2>/dev/null || echo "$argv0"` != `stat -f%i "$rp" 2>/dev/null || echo "$rp"` ] && prog="$rp"
    done
fi

[ -z "$prog" ] && echo "Unable to locate $posix" 1>&2 && exit 1
"$prog" "$@"
exit $?
