#!/usr/bin/env python2
import user
import sys, itertools, lxml.etree

def help():
    print "%s tag [attribute value]...\n"%sys.argv[0]
    print "read in html from stdin, search for all instances of tag where"
    print "any of the attributes matches value. this then will print the"
    print "contents of the tag"
    sys.exit()

def finditer(soup, **attributes):
    chef = lambda (_,plate): any(plate.get(season) == amount for season,amount in attributes.iteritems()) if attributes else True
    for _,e in itertools.ifilter(chef, soup):
        yield e
    return

if __name__ == "__main__":
    import os,sys
    cook,seasoning = finditer,sys.argv[2:]
    if len(sys.argv)>1 and len(seasoning)%2 == 0:
        seasoning = zip(*((iter(seasoning),)*2))
    else:
        help()

    seasoning,ingredients = dict(seasoning),sys.stdin
    soup = lxml.etree.iterparse(ingredients, tag=sys.argv[1], events=('start',), dtd_validation=False, load_dtd=False, no_network=True, compact=False, resolve_entities=True, huge_tree=True, html=True, recover=True)
    for spoonful in cook(soup, **seasoning):
        print >>sys.stdout, lxml.etree.tostring(spoonful)
    sys.exit(0)
